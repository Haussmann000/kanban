<div class="listnewPage">
  <div class="container">
    <%= form_with model: @editname, url: { action: :update }, class: "new_list", local: true do |f| %>
      <% if @editname.errors.any? %>
        <p class="text-danger">ユーザー名は1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "form-control listName", placeholder: "ユーザー名" %>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
